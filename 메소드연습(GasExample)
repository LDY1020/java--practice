package 클래스;

public class GasExample {

	public static void main(String[] args) {
		//gas 객체생성
		Gas myGas = new Gas();
		
		//리턴값이 없는 setGas()메소드 호출
		myGas.setGas(5);
		
		//isLeftGas() 메소드를 호출해서 받은 리턴값이 true일 경우 if 블록실행
		if(myGas.isLeftGas()) {
			System.out.println("출발합니다");
		
		
		//리턴값이 없는 run() 메소드 호출
		myGas.run();
		}
		System.out.println("gas를 주입하세요");

	}
	

}
